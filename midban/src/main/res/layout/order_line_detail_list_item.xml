<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/order_line_detail_list_item_product_image"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/separator_margin"
        android:layout_weight="2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order_line_detail_list_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h4" />

        <TextView
            android:id="@+id/order_line_detail_list_item_product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/separator_margin"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/order_line_detail_list_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/separator_margin"
            android:textSize="@dimen/h4" />

        <ImageView
            android:id="@+id/order_line_detail_list_item_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/order_line_detail_list_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/h4" />

    <TextView
        android:id="@+id/order_line_detail_list_item_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/h4" />

    <TextView
        android:id="@+id/order_line_detail_list_item_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/h4" />

</LinearLayout>