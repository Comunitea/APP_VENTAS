<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cafedered.midban.view.fragments.ProductCardFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fragment_product_card_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h1"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_product_card_product_code_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_card_code_text"
                android:textColor="@color/midban_secondary_text_color"
                android:textSize="@dimen/h5" />

            <TextView
                android:id="@+id/fragment_product_card_product_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h4" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/h5h4_pair"
            android:layout_marginRight="@dimen/separator_margin"
            android:layout_marginTop="@dimen/label_to_value_margin"
            android:background="@color/midban_secondary_text_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_product_card_product_stock_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_card_stock_text"
                android:textColor="@color/midban_secondary_text_color"
                android:textSize="@dimen/h5" />

            <TextView
                android:id="@+id/fragment_product_card_product_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h4" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/h5h4_pair"
            android:layout_marginRight="@dimen/separator_margin"
            android:layout_marginTop="@dimen/label_to_value_margin"
            android:background="@color/midban_secondary_text_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_product_card_product_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_card_price_text"
                android:textColor="@color/midban_secondary_text_color"
                android:textSize="@dimen/h5" />

            <TextView
                android:id="@+id/fragment_product_card_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading"
                android:textSize="@dimen/h4" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/h5h4_pair"
            android:layout_marginRight="@dimen/separator_margin"
            android:layout_marginTop="@dimen/label_to_value_margin"
            android:background="@color/midban_secondary_text_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_product_card_product_format_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_card_format_text"
                android:textColor="@color/midban_secondary_text_color"
                android:textSize="@dimen/h5" />

            <TextView
                android:id="@+id/fragment_product_card_product_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h4" />
        </LinearLayout>

        <Button
            android:id="@+id/fragment_product_card_add_to_cart_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:drawablePadding="1dp"
            android:drawableRight="@drawable/ficha_producto_anadir_carrito"
            android:lines="1"
            android:text="@string/add"
            android:textSize="@dimen/h3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_product_card_product_ean13_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_card_ean13"
                android:textColor="@color/midban_secondary_text_color"
                android:textSize="@dimen/h5" />

            <TextView
                android:id="@+id/fragment_product_card_product_ean13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h4" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/h5h4_pair"
            android:layout_marginRight="@dimen/separator_margin"
            android:layout_marginTop="@dimen/label_to_value_margin"
            android:background="@color/midban_secondary_text_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fragment_product_card_product_dun14_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_product_card_dun14"
                android:textColor="@color/midban_secondary_text_color"
                android:textSize="@dimen/h5" />

            <TextView
                android:id="@+id/fragment_product_card_product_dun14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h4" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/label_to_value_margin"
        android:layout_marginRight="@dimen/label_to_value_margin"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fragment_product_card_tab_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/label_to_value_margin"
            android:background="@color/midban_darker_grey"
            android:paddingBottom="@dimen/label_to_value_margin"
            android:paddingLeft="@dimen/button_horizontal_padding"
            android:paddingRight="@dimen/button_horizontal_padding"
            android:paddingTop="@dimen/label_to_value_margin"
            android:tag="1"
            android:text="@string/fragment_product_card_general"
            android:textSize="@dimen/h4" />

        <TextView
            android:id="@+id/fragment_product_card_tab_logistics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/label_to_value_margin"
            android:background="@color/midban_grey"
            android:paddingBottom="@dimen/label_to_value_margin"
            android:paddingLeft="@dimen/button_horizontal_padding"
            android:paddingRight="@dimen/button_horizontal_padding"
            android:paddingTop="@dimen/label_to_value_margin"
            android:tag="2"
            android:text="@string/fragment_product_card_logistics"
            android:textSize="@dimen/h4" />

        <TextView
            android:id="@+id/fragment_product_card_tab_sustitutive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/midban_grey"
            android:paddingBottom="@dimen/label_to_value_margin"
            android:paddingLeft="@dimen/button_horizontal_padding"
            android:paddingRight="@dimen/button_horizontal_padding"
            android:paddingTop="@dimen/label_to_value_margin"
            android:visibility="gone"
            android:tag="4"
            android:text="@string/fragment_product_card_sustitutive"
            android:textSize="@dimen/h4" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7" >

        <LinearLayout
            android:id="@+id/fragment_product_card_general_tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/fragment_product_card_big_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight="7" />

            <ListView
                android:id="@+id/fragment_product_card_image_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="3" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/fragment_product_card_logistics_tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@color/midban_lighter_grey"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_unit"
                            android:textColor="@color/midban_dark_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_per_box"
                            android:textColor="@color/midban_darker_grey"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fragment_product_card_product_unit_per_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_box"
                            android:textColor="@color/midban_dark_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_per_palet"
                            android:textColor="@color/midban_darker_grey"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fragment_product_card_product_box_per_palet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp" >

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_weight"
                            android:textColor="@color/midban_dark_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_per_palet"
                            android:textColor="@color/midban_darker_grey"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fragment_product_card_product_weight_per_palet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_total_height"
                            android:textColor="@color/midban_dark_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_per_palet"
                            android:textColor="@color/midban_darker_grey"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fragment_product_card_product_total_height_per_palet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="10dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_type_of"
                            android:textColor="@color/midban_dark_grey" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fragment_product_card_palet"
                            android:textColor="@color/midban_darker_grey"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/fragment_product_card_product_type_of_palet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/midban_grey" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/midban_grey" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/fragment_product_card_sustitutive_tab_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <ListView
                android:id="@+id/fragment_product_card_substitutives_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fragment_product_card_send_btn"
            style="@style/MidbanButtonSecondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible"
            android:gravity="center"
            android:text="@string/fragment_product_card_send_card" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03" />

        <Button
            android:id="@+id/fragment_product_card_catalog_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fragment_product_card_see_catalog" />
    </LinearLayout>

</LinearLayout>