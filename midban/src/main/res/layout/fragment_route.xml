<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cafedered.midban.fragments.RouteFragment" >
    <LinearLayout
        android:id="@+id/fragment_route_header"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="@dimen/separator_margin"
        android:paddingRight="@dimen/separator_margin"
        android:paddingTop="@dimen/separator_margin"
        android:paddingBottom="@dimen/separator_margin"
        android:background="@color/midban_partner_header_bg"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <org.droidparts.widget.ClearableEditText
            android:drawableRight="@drawable/general_filtrar_borrar"
            android:drawablePadding="12dp"
            android:id="@+id/fragment_route_date_et"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/h3" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/fragment_route_list"></ListView>

</LinearLayout>