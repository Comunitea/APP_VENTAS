<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/separator_margin"
    android:paddingLeft="@dimen/separator_margin"
    android:paddingRight="@dimen/separator_margin"
    android:paddingTop="@dimen/separator_margin"
    tools:context="com.cafedered.midban.fragments.OrderListFragment" >

    <LinearLayout
        android:id="@+id/fragment_order_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_order_num_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:textSize="@dimen/h4" />

        <TextView
            android:id="@+id/fragment_order_amount_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:textSize="@dimen/h4" />

        <TextView
            android:id="@+id/fragment_order_margin_orders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:textSize="@dimen/h4" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_order_list_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_order_summary"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/separator_margin" >

        <TextView
            android:id="@+id/fragment_order_list_header_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/fragment_order_list_header_code"
            android:textSize="@dimen/h5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_order_list_header_partner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:layout_weight="1.3"
            android:gravity="center_horizontal"
            android:text="@string/fragment_order_list_header_partner"
            android:textSize="@dimen/h5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_order_list_header_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:text="@string/fragment_order_list_header_date"
            android:textSize="@dimen/h5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_order_list_header_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:layout_weight="1.2"
            android:gravity="center_horizontal"
            android:text="@string/fragment_order_list_header_amount"
            android:textSize="@dimen/h5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_order_list_header_lines"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="@string/fragment_order_list_header_lines"
            android:textSize="@dimen/h5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_order_list_header_state"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/separator_margin"
            android:layout_weight="0.9"
            android:gravity="center_horizontal"
            android:text="@string/fragment_order_list_header_state"
            android:textSize="@dimen/h5"
            android:textStyle="bold" />
        <View
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="0.4"/>
    </LinearLayout>

    <ListView
        android:id="@+id/fragment_order_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_order_list_header" />

</RelativeLayout>