<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cafedered.midban.fragments.SynchronizationFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical" >

        <Button
            android:id="@+id/fragment_synchronization_button_synchronize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/button_horizontal_padding"
            android:text="@string/activity_synchronization_synchronize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fragment_synchronization_messages_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin" />

        <ProgressBar
            android:id="@+id/fragment_synchronization_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:progressDrawable="@drawable/midban_custom_progress_bar"
            android:layout_margin="@dimen/activity_horizontal_margin" />
    </LinearLayout>

    <ListView
        android:id="@+id/fragment_synchronization_table_synchronizations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:background="@color/synchronization_background_list" />

</LinearLayout>