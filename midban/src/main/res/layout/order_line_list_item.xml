<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/order_line_list_item_product_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.8"
        android:layout_marginLeft="@dimen/separator_margin"
        android:layout_marginRight="@dimen/separator_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/order_line_list_item_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/h4" 
            />
        <TextView
            android:id="@+id/order_line_list_item_product_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textSize="@dimen/h4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/order_line_list_item_less_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/general_flecha_abajo"/>
        <TextView
            android:id="@+id/order_line_list_item_quantity"
            android:layout_width="wrap_content"
            android:textSize="@dimen/h4"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/order_line_list_item_plus_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/general_flecha_arriba"/>
    </LinearLayout>
    
    <ImageView
            android:id="@+id/order_line_list_item_unit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    
    <TextView
            android:id="@+id/order_line_list_item_price"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/h4"
            android:layout_height="wrap_content" />
    
    <TextView
            android:id="@+id/order_line_list_item_discount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/h4"
            android:layout_height="wrap_content" />
    
    <TextView
            android:id="@+id/order_line_list_item_total"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="@dimen/h4"
            android:layout_height="wrap_content" />
    
    <ImageView
            android:id="@+id/order_line_list_item_delete_icon"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:src="@drawable/general_eliminar" />

</LinearLayout>