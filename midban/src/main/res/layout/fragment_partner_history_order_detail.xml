<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cafedered.midban.fragments.PartnerHistoryOrderDetailFragment">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nsvScrollView"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/fragment_partner_history_order_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_vertical_margin"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_order_number_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="@dimen/separator_margin"
                            android:text="@string/fragment_partner_history_order_detail_order_number"
                            android:textSize="@dimen/h1" />

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_order_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textColor="@color/midban_secondary_text_color"
                            android:textSize="@dimen/h1" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_order_date_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="@dimen/separator_margin"
                            android:text="@string/fragment_partner_history_order_detail_date"
                            android:textSize="@dimen/h3" />

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_order_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="@dimen/h3" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fragment_partner_history_order_detail_delivery_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:textSize="@dimen/h3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_lines_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="@dimen/separator_margin"
                            android:text="@string/fragment_partner_history_order_detail_lines"
                            android:textSize="@dimen/h3" />

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_lines"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="@dimen/h3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_amount_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="@dimen/separator_margin"
                            android:text="@string/fragment_partner_history_order_detail_amount"
                            android:textSize="@dimen/h3" />

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="@dimen/h3" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_margin_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/separator_margin"
                            android:layout_gravity="left"
                            android:text="@string/fragment_partner_history_order_detail_margin"
                            android:textSize="@dimen/h3" />

                        <TextView
                            android:id="@+id/fragment_partner_history_order_detail_margin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:textSize="@dimen/h3" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:text="@string/fragment_partner_history_order_detail_address"
                        android:textSize="@dimen/h3" />

                    <TextView
                        android:id="@+id/fragment_partner_history_order_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:textSize="@dimen/h3" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/fragment_partner_history_order_detail_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_partner_history_order_detail"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/midban_order_notes_bg"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="@string/fragment_order_notes_text" />

            <View
                android:id="@+id/fragment_partner_history_order_detail_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/fragment_partner_history_order_detail_notes"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@color/midban_secondary_text_color" />

            <LinearLayout
                android:id="@+id/fragment_partner_history_order_detail_list_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_partner_history_order_detail_separator"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin" >

                <TextView
                    android:id="@+id/fragment_partner_history_order_detail_list_item_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/separator_margin"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:text="@string/fragment_partner_history_order_detail_list_item_product"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_partner_history_order_detail_list_item_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/separator_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/fragment_partner_history_order_detail_list_item_quantity"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_partner_history_order_detail_list_item_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/separator_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/fragment_partner_history_order_detail_list_item_amount"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_partner_history_order_detail_list_item_discount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/separator_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/fragment_partner_history_order_detail_list_item_discount"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fragment_partner_history_order_detail_list_item_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/separator_margin"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/fragment_partner_history_order_detail_list_item_total"
                    android:textSize="@dimen/h4"
                    android:textStyle="bold" />
            </LinearLayout>

            <ListView
                android:id="@+id/fragment_partner_history_order_detail_list_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fragment_partner_history_order_detail_list_header"
                android:layout_marginBottom="60dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/fragment_partner_history_order_detail_send_order_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/MidbanButtonSecondary"
                    android:gravity="center"
                    android:text="@string/fragment_partner_history_order_detail_send_order"
                    android:textSize="@dimen/h3" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.03" />

                <Button
                    android:id="@+id/fragment_partner_history_order_detail_repeat_order_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/fragment_partner_history_order_detail_repeat_order"
                    android:textSize="@dimen/h3" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>